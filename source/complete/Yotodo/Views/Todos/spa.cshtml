<h1>Todo (SPA)</h1>

<div ng-app="app">
    <div ng-controller="TodoController as vm">
        
        <div class="row">
            <div class="col-md-12">
                 <ul class="todo-list">
                   
                        <li class="todo-list-item" ng-repeat="t in vm.items">
                            <input type="checkbox" ng-checked="t.isCompleted" ng-click="vm.complete(t)"/> <label ng-bind="t.title"></label>
                            <p ng-bind="t.description"></p>
                        </li>
                </ul>
            </div>
        </div>
        
         <hr />
        <div class="row">
            <h3>Add Todo</h3>
            <form class="form-horizontal" role="form" ng-submit="vm.add()">
               
               
                <div class="form-group">
                    <label for="Title" class="col-md-2 control-label">Title</label>
                    <div class="col-md-10">
                        <input id="Title" class="form-control" ng-model="vm.todo.title"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Description" class="col-md-2 control-label">Description</label>
                    <div class="col-md-10">
                        <textarea id="Description" class="form-control" ng-model="vm.todo.description"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Add Todo</button>
                    </div>
                </div>
            </form>
        </div>
        
   </div>
   
</div>

@section scripts {
     <environment names="Development">
         
            <script type="text/javascript" src="~/lib/angular/angular.js"></script>
            <script type="text/javascript" src="~/js/angular/app.js"></script>
            <script type="text/javascript" src="~/js/angular/tasks.controller.js"></script>
            
        </environment>
        <environment names="Staging,Production">
            
            <script src="~/js/spa.min.js" asp-append-version="true"></script>
            
        </environment>
}